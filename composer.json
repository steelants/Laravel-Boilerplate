{
    "name": "steelants/laravel-boilerplate",
    "description": "Everything you need to start your Laravel journey.",
    "type": "library",
    "license": "MIT",
    "require": {
        "laravel/framework": "^11.0|^12.0",
        "livewire/livewire": "^3.0",
        "steelants/form": "^1.3.1",
        "steelants/modal": "^2.0.1",
        "steelants/datatable": "^2.3.5",
        "steelants/laravel-auth": "^1.0.3",
        "steelants/livewire-form": "^0.0.3"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.9",
        "phpunit/phpunit": "^11.0.1",
        "squizlabs/php_codesniffer": "^4.0",
        "slevomat/coding-standard": "^8.19"
    },
    "autoload": {
        "psr-4": {
            "SteelAnts\\LaravelBoilerplate\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "SteelAnts",
            "email": "info@steelants.cz"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "SteelAnts\\LaravelBoilerplate\\BoilerplateServiceProvider"
            ]
        }
    },
    "scripts": {
        "check-static": "phpstan --memory-limit=2g",
        "format": "phpcbf",
        "lint": "phpcs"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
